@model WooxTravel.Entities.Message
@{
    ViewBag.Title = "SendMessage";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<div class="container">
    <div class="page-inner">
        <div class="row">
            <div class="col-md-12">

                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Yeni Mesaj Gönderme Sayfası</div>
                    </div>
                    <div class="card-body">
                        <form method="post">
                            <label>Alıcı Email</label>
                            @Html.TextBoxFor(s => s.ReceiverMail, new { @class = "form-control" })
                            <br />
                            <label>Konu</label>
                            @Html.TextBoxFor(s => s.Subject, new { @class = "form-control" })
                            <br />
                            <label>Mesajınız</label>
                            @Html.TextBoxFor(s => s.Content, new { @class = "form-control" })
                            <br />
                            <button class="btn btn-primary">Mesajı Gönder</button>
                        </form>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

