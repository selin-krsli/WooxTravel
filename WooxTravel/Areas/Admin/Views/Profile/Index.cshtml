@model WooxTravel.Entities.Admin
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<div class="container">
    <div class="page-inner">
        <div class="row">
            <div class="col-md-12">

                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Profil Bilgisi Düzenleme</div>
                    </div>
                    <div class="card-body">
                        <form method="post">
                            <label>Adınız</label>
                            @Html.TextBoxFor(s => s.Name, new { @class = "form-control" })
                            <br />
                            <label>Soyadınız</label>
                            @Html.TextBoxFor(s => s.Surname, new { @class = "form-control" })
                            <br />
                            <label>Email Adresiniz</label>
                            @Html.TextBoxFor(s => s.Email, new { @class = "form-control" })
                            <br />
                            <label>Kullanıcı Adınız</label>
                            @Html.TextBoxFor(s => s.Username, new { @class = "form-control" })
                            <br />
                            <label>Şifreniz</label>
                            @Html.PasswordFor(s => s.Password, new { @class = "form-control" })
                            <br />
                            <button class="btn btn-success">Bilgileri Güncelle</button>
                        </form>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

