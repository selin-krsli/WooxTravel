@model List<WooxTravel.Entities.Destination>
@{ 
    int count1 = 1;
    int count2 = 1;
}

<section id="section-1">
    <div class="content-slider">
        <input type="radio" id="banner1" class="sec-1-input" name="banner" checked>
        <input type="radio" id="banner2" class="sec-1-input" name="banner">
        <input type="radio" id="banner3" class="sec-1-input" name="banner">
        <input type="radio" id="banner4" class="sec-1-input" name="banner">

        <div class="slider">
            @foreach (var item in Model)
            {
                <div id="top-banner-@count1" class="banner" style="background-image:url('@item.ImageUrl');">
                    <div class="banner-inner-wrapper header-text">
                        <div class="main-caption">
                            <h2>@item.Title</h2>
                            <h1>@item.Country</h1>
                            <div class="border-button"><a href="/Destination/DestinationList/">Turlarımızı Görüntüleyiniz</a></div>
                        </div>
                        <div class="container">
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="more-info">
                                        <div class="row">
                                            <div class="col-lg-3 col-sm-6 col-6">
                                                <i class="fa fa-user"></i>
                                                <h4><span>Gün Sayısı:</span><br>@item.DayNight Gün - @(item.DayNight-1) Gece</h4>
                                            </div>
                                            <div class="col-lg-3 col-sm-6 col-6">
                                                <i class="fa fa-user"></i>
                                                <h4><span>Kişi Kapasitesi:</span><br>@item.Capacity</h4>
                                            </div>
                                            <div class="col-lg-3 col-sm-6 col-6">
                                                <i class="fa fa-home"></i>
                                                <h4><span>Tur Ücreti:</span><br>$@item.Price</h4>
                                            </div>
                                            <div class="col-lg-3 col-sm-6 col-6">
                                                <div class="main-button">
                                                    <a href="about.html">Daha Fazlası</a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                count1++;
            }

        </div>
        <nav>
            <div class="controls">
                @foreach (var item in Model)
                {
                    <label for="banner"><span class="progressbar"><span class="progressbar-fill"></span></span><span class="text">@count2</span></label>
                    count2++;
                }
            </div>
        </nav>
    </div>
</section>
