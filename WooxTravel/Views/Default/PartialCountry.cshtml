@using PagedList;
@using PagedList.Mvc;
@using WooxTravel.Entities
@model PagedList.IPagedList<Destination>

<div class="visit-country">
    <div class="container">
        <div class="row">
            <div class="col-lg-5">
                <div class="section-heading">
                    <h2>Popüler Tur ve Seyahat Rotalarımız</h2>
                    <p>Dünyanın dört bir noktasına alanında uzman rehperler eşliğinde seyahate çıkmaya hazır mısınız? </p>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="items">
                    <div class="row">
                        @foreach (var item in Model)
                        {
                            <div class="col-lg-12">
                                <div class="item">
                                    <div class="row">
                                        <div class="col-lg-4 col-sm-5">
                                            <div class="image">
                                                <img src="@item.ImageUrl" alt="">
                                            </div>
                                        </div>
                                        <div class="col-lg-8 col-sm-7">
                                            <div class="right-content">
                                                <h4>@item.Country</h4>
                                                <span>@item.City</span>
                                                <div class="main-button">
                                                    <a href="/Default/DestinationDetail/@item.DestinationId/">Tur Detaylarını Gör</a>
                                                </div>
                                                <p>@item.Description</p>
                                                <ul class="info">
                                                    <li><i class="fa fa-user"></i> @item.DayNight Gün - @(item.DayNight-1) Gece</li>
                                                    <li><i class="fa fa-globe"></i> @item.Price ₺</li>
                                                    <li><i class="fa fa-home"></i> @item.Capacity Kişi</li>
                                                </ul>
                                                <div class="text-button">
                                                    <a href="@Url.Action("DestinationDetail", "Destination", new {id=item.DestinationId})">Devamını Oku<i class="fa fa-arrow-right"></i></a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                        </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="pagination-container">
    @Html.PagedListPager((IPagedList)Model, page => Url.Action("Index", new { page }), new PagedListRenderOptions
{
    LiElementClasses = new List<string> { "page-link" }
})
</div>
<style>
    .pagination-container {
        display: flex;
        justify-content: center;
        margin-top: 20px;
    }

    .pagination .page-item {
        margin: 0 5px;
    }

        .pagination .page-item a {
            color: #007bff;
            padding: 8px 12px;
            border: 1px solid #ddd;
            border-radius: 4px;
            text-decoration: none;
        }

        .pagination .page-item.active a {
            background-color: #007bff;
            color: #fff;
            border-color: #007bff;
        }

        .pagination .page-item a:hover {
            background-color: #f0f0f0;
            color: #007bff;
        }
        .image img{
            width:100%;
            height:250px;
            object-fit:cover;
            border-radius:8px;
        }
</style>
